{% extends 'modal/dialog.html.twig' %}
{% block modal_id %}login-dialog{% endblock %}
{% block modal_title %}Login{% endblock %}

{% block modal_body %}
    <form class="form-inline">
        <div class="form-group">
            <input name="nick" type="text" class="form-control" placeholder="Nick">
            <input name="password" type="password" class="form-control" placeholder="Password">
        </div>
        <p>
            <a href="#signup" class="nogo" data-dismiss="modal">
                Don't have an account?
            </a>
        </p>
    </form>
{% endblock %}

{% block modal_footer %}
    <button type="button" class="btn btn-primary">Login</button>
    <button type="button" class="btn btn-link" data-dismiss="modal">Cancel</button>
{% endblock %}
