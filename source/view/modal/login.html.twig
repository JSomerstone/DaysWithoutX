{% extends 'modal/dialog.html.twig' %}

{% set modal_id = 'login-dialog' %}
{% set modal_title = 'Login' %}

{% block modal_body %}
    <form class="form-inline">
        <div class="form-group">
            <input
                name="nick"
                id="login-nick"
                class="form-control"
                placeholder="Nick"
                {% include 'form/field.html.twig' with { field: field.nick } %}
            >
            <input name="password"  id="login-password" type="password" class="form-control" placeholder="Password">
        </div>
        <p>
            <a href="#signup" class="nogo" data-dismiss="modal">
                Don't have an account?
            </a>
        </p>
        <button type="button" id="login-button" class="btn btn-primary">Login</button>
        <button type="button" class="btn btn-link" data-dismiss="modal">Cancel</button>
    </form>
{% endblock %}
