{% extends 'modal/dialog.html.twig' %}
{% block modal_id %}signup-dialog{% endblock %}
{% block modal_title %}Signup{% endblock %}

{% block modal_body %}
    <form>
        <div class="form-group">
            <input
                name="nick"
                id="nickField"
                type="text"
                class="form-control mandatory"
                required="1"
                placeholder="Nick"
            >
        </div>
        <div class="form-group">
            <input
                name="password"
                id="passwordField"
                type="password"
                class="form-control mandatory pw col-sm-6"
                required="1"
                placeholder="Password"

            >
            <input
                name="password-confirm"
                id="passwordConfirmField"
                type="password"
                class="form-control mandatory pw col-sm-6"
                required="1"
                placeholder="Confirm"
            >
            <p>
                <a href="#login" data-toggle="modal" data-target="#login-dialog" data-dismiss="modal">
                    Already got an account?
                </a>
            </p>
        </div>
    </form>
{% endblock %}

{% block modal_footer %}
    <button type="button" class="btn btn-primary">Sign up</button>
    <button type="button" class="btn btn-link" data-dismiss="modal">Cancel</button>
{% endblock %}
