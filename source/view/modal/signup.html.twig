{% extends 'modal/dialog.html.twig' %}
{% block modal_id %}signup-dialog{% endblock %}
{% block modal_title %}Signup{% endblock %}

{% block modal_body %}
    <p>
        Fill the form to sing up to DaysWithout.info - this allows you to create <b>private</b> and <b>protected</b>
        counters.
    </p>
    <form>
        <div class="form-group">
            <input
                name="nick"
                id="nickField"
                type="text"
                class="form-control mandatory"
                required="1"
                placeholder="Nick"
            >
        </div>
        <div class="form-group">
            <input
                name="password"
                id="passwordField"
                type="password"
                class="form-control mandatory pw col-sm-6"
                required="1"
                placeholder="Password"

            >
            <input
                name="password-confirm"
                id="passwordConfirmField"
                type="password"
                class="form-control mandatory pw col-sm-6"
                required="1"
                placeholder="Confirm"
            >
            <p>
                <a href="#login" class="nogo" data-dismiss="modal">
                    Already got an account?
                </a>
            </p>
        </div>
    </form>
{% endblock %}

{% block modal_footer %}
    <button id="sign-up-button" type="button" class="btn btn-primary">Sign up</button>
    <button type="button" class="btn btn-link" data-dismiss="modal">Cancel</button>
{% endblock %}
