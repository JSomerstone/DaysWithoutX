{% extends 'modal/dialog.html.twig' %}
{% set modal_id = 'signup-dialog' %}
{% set modal_title = 'Signup' %}

{% block modal_body %}
    <p>
        Fill the form to sing up to DaysWithout.info - this allows you to create <b>private</b> and <b>protected</b>
        counters.
    </p>
    <form>
        <div class="form-group">
            <input
                name="nick"
                id="nickField"
                type="text"
                class="form-control mandatory col-sm-6"
                required="1"
                placeholder="Nick"
            >
            <input
                name="email"
                id="emailField"
                type="email"
                class="form-control mandatory col-sm-6"
                required="1"
                placeholder="Email"
            >
            <i class="note">
                - We will never send you unwanted mail, reveal or sell your address to anyone.
            </i>
        </div>
        <div class="form-group">
            <input
                name="password"
                id="passwordField"
                type="password"
                class="form-control mandatory pw"
                required="1"
                placeholder="Password"
            >
            <p>
                <a href="#login" class="nogo" data-dismiss="modal">
                    Already got an account?
                </a>
            </p>
        </div>
    </form>
{% endblock %}

{% block modal_footer %}
    <button id="sign-up-button" type="button" class="btn btn-primary">Sign up</button>
    <button type="button" class="btn btn-link" data-dismiss="modal">Cancel</button>
{% endblock %}
