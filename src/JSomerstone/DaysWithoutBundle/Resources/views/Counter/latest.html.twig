<h2>Latest counters</h2>
<table class="counter-list">
    <tbody>
        {% for counter in latest %}
            <tr>
                <td class="counter-list-daycount">
                    {{ counter.days }}
                </td>
                <td class="counter-list-head">
                    <a href="{{ url('dwo_show_counter', { 'name': counter.name, 'owner': counter.owner }) }}">
                        days without <b>{{ counter.headline }}</b>
                    </a>

                    {% if counter.public %}
                    {% else %}
                        &NonBreakingSpace;- <i>{{ counter.owner }}</i>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}

    </tbody>

</table>
