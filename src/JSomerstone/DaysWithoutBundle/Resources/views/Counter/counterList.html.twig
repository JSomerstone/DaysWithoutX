<h2>{{ list_headline }}</h2>
<table class="counter-list">
    <tbody>
        {% for counter in counters %}
            <tr>

                <th class="counter-list-daycount">
                    {{ counter.days }}
                </th>
                <td class="counter-list-head">
                    <a href="{{ url('dwo_show_counter', { 'name': counter.name, 'owner': counter.owner }) }}">
                        days without <b>{{ counter.headline }}</b>
                    </a>
                </td>
                <td>
                    {% include 'JSomerstoneDaysWithoutBundle:Counter:visibilityIcon.html.twig' %}
                </td>
                {% if counter.owner and showUser %}
                <td>
                    <a href="{{ url('dwo_list_user_counters', { 'user': counter.owner}) }}">
                        {{ counter.owner }}
                    </a>
                </td>
                {% endif %}
            </tr>
        {% endfor %}
    </tbody>
</table>
