{% extends 'JSomerstoneDaysWithoutBundle::layout.html.twig' %}

{% block title %} {{ counter.days }} Days w/o {{ counter.headline }}{% endblock %}

{% block page_header '' %}

{% block content %}
<div class="row">
    <div class="col-lg-6 col-sm-6 col-sm-offset-3 col-xs-12">
        <h2>Days without {{ counter.headline }}:</h2>
        <div class="row">
            <div class="counterDays">{{ counter.days }}</div>
            {% if counter.public == false %}
                <span class="lead">by <b>
                    <a href="{{ url('dwo_list_user_counters', { 'user': counter.owner.nick }) }}">
                        {{ counter.owner.nick }}
                    </a>
                    </b>
                </span>
            {% endif %}
        </div>
        <div class="row">
            <p>
                <i>
                    <a href="{{ url('dwo_show_counter', { 'name': counter.name, 'owner': counter.owner }) }}">
                        {{ url('dwo_show_counter', { 'name': counter.name, 'owner': counter.owner }) }}
                    </a>
                </i>
            </p>
            {% if counter.days > 0 %}
                <div class="row col-sm-10 col-sm-offset-1">
                    {{ form_start(form) }}
                    {% if loggedIn or counter.public %}
                    {% else %}
                    <div>
                        <div class="col-xs-6 wo-pad-right">
                            {{ form_widget(form.nick, {'attr': {'class': 'form-control', 'placeholder': 'Nick'}}) }}
                        </div>
                        <div class="col-xs-6 wo-pad-left">
                            {{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder': 'Password' }}) }}
                        </div>
                    </div>
                    {% endif %}
                    {{ form_widget(form.reset, {'attr': {
                        'onClick': "return confirm('Do you REALLY want to reset the counter?');",
                        'class': 'btn btn-big btn-danger btn-block' }}) }}
                    {{ form_end(form) }}
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
