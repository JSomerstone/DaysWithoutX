{% extends 'JSomerstoneDaysWithoutBundle::layout.html.twig' %}

{% block title %}Days w/o {{ title }}{% endblock %}

{% block content %}
<div class="row">
    <div class="col-lg-6 col-sm-6 col-sm-offset-3 col-xs-12">
        <h2>Sign Up</h2>
        <form action="{{ path('dwo_signup') }}" method="post" class="form-horizontal" role="form">
            <div class="form-group">
                <label for="nickField" class="col-sm-3 control-label">Nick</label>
                <div class="col-sm-9">
                    <input name="nick" id="nickField" type="text" class="form-control">
                </div>
            <div class="form-group">
            </div>
                <label for="passwordField" class="col-sm-3 control-label">Password</label>
                <div class="col-sm-9">
                    <input name="password" id="passwordField" type="password" class="form-control">
                </div>
                <label for="passwordConfirmField" class="col-sm-3 control-label">Confirm</label>
                <div class="col-sm-9">
                    <input name="password-confirm" id="passwordConfirmField" type="password" class="form-control">
                </div>
            </div>
            <div class="col-sm-offset-3">
                <input class="btn btn-primary btn-lg" type="submit" value="Send">
                <a href="{{ path('dwo_frontpage') }}" class="btn btn-default btn-lg">Cancel</a>
            </div>
        </form>
    </div>
</div>
{% endblock %}
