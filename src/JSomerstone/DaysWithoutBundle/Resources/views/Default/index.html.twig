{% extends 'JSomerstoneDaysWithoutBundle::layout.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-offset-3 col-lg-4 col-sm-6 col-xs-12">
            <h2>Start new counter:</h2>
            <h3>0 days without</h3>
            {{ form_start(
                form, {
                    'action': path('dwo_create_counter'),
                    'method': 'POST',
                    'attr': {'class' : 'form-horizontal'}
                    }
                )
            }}
                <div>{{ form_errors(form) }}</div>
                <div class="form-group">
                    <div class="col-xs-12">
                        {{ form_widget(form.headline, {'attr': {'class': 'form-control input-lg', 'autofocus': 'autofocus', 'placeholder': '... what?' }}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_widget(form.public, {'attr': {'class': 'btn btn-lg btn-primary btn-block' }}) }}
                    <div style="text-align: center">~ or ~</div>
                    {% if not loggedIn %}
                        <div class="col-xs-6 wo-pad-right">
                            {{ form_widget(form.owner.nick, {'attr': {'class': 'form-control', 'placeholder': 'Nick'}}) }}
                        </div>
                        <div class="col-xs-6 wo-pad-left">
                            {{ form_widget(form.owner.password, {'attr': {'class': 'form-control', 'placeholder': 'Password' }}) }}
                        </div>
                    {% endif %}
                    {{ form_widget(form.private, {'attr': {'class': 'btn btn-lg btn-danger btn-block' }}) }}
                </div>
            {{ form_end(form) }}
        </div>
        <div class="col-lg-3 col-sm-6 col-xs-12">
            <p>
                <b>Public</b>-button will create a <u>public</u> counter that anyone can reset.
            </p>
            <p>
                <b>Private</b> counter requires <b>nick</b> and <b>password</b> and that counter can only
                be reseted using password.
            </p>
        </div>
    </div>
    <div class="row">
        <div class="{{ content_classes }}">
            {% include 'JSomerstoneDaysWithoutBundle:Counter:latest.html.twig' %}
        </div>
    </div>
{% endblock %}
